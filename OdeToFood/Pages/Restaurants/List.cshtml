@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}
<h2>List</h2>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="btn btn-default"></i>
                    Search
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var Restaurant in Model.Restaurants)
    {
        <tr>
            <td>@Restaurant.Name</td>
            <td>@Restaurant.Location</td>
            <td>@Restaurant.Cuisine</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@Restaurant.ID">
                    <i class="btn btn-default"></i>
                    Details
                </a>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@Restaurant.ID">
                    <i class="btn btn-default"> </i>
                    Edit
                </a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-default" asp-page="./Edit">Add New Restaurants</a>